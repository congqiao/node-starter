{
  "private": true,
  "scripts": {
    "start": "nodemon -e ts,tsx -w src -r ts-node/register -r dotenv/config --inspect src",
    "build": "tsc",
    "tslint": "tslint -p .",
    "tslint-fix": "tslint --fix -p .",
    "prettier": "prettier --write \"./**/*.{css,js,json,jsx,less,md,scss,ts,tsx}\"",
    "fix": "run-s tslint-fix prettier",
    "precommit": "lint-staged",
    "prepush": "run-s tslint",
    "heroku-postbuild": "yarn run build"
  },
  "lint-staged": {
    "*.{css,js,json,jsx,less,md,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "source-map-support": "^0.5.6"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/node": "^10.5.4",
    "dotenv": "^6.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.0",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1"
  },
  "engines": {
    "node": "10"
  }
}
